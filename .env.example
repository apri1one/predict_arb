# Predict
PREDICT_API_BASE_URL=https://api.predict.fun
PREDICT_API_KEY=

# 额外 API Key（可选，arb-monitor 会轮换使用以提高请求频率）
# API 限制: 240 次/分钟/Key，使用 2 个 Key 可达 480 次/分钟
PREDICT_API_KEY_2=
PREDICT_API_KEY_3=

# 交易专用 API Key（可选，如果设置则交易操作优先使用此 Key）
PREDICT_API_KEY_TRADE=

# 扫描专用 API Key（可选，scan-markets 脚本使用）
PREDICT_API_KEY_SCAN=
PREDICT_API_KEY_SCAN_2=
PREDICT_API_KEY_SCAN_3=

# Optional (only needed for endpoints requiring JWT; not required for basic market/orderbook reads)
PREDICT_SIGNER_ADDRESS=
PREDICT_SIGNER_PRIVATE_KEY=
PREDICT_SMART_WALLET_ADDRESS=  # Your Predict smart wallet address (for balance queries)

# BSC WebSocket URL (可选，逗号分隔多个；不设置时使用公共节点)
BSC_WSS_URLS=wss://bsc.publicnode.com,wss://bsc-ws-node.nariox.org

# Polymarket
# CLOB REST base (from OpenAPI): https://docs.polymarket.com/api-reference/clob-subset-openapi.yaml
POLYMARKET_CLOB_BASE_URL=https://clob.polymarket.com

# CLOB WebSocket URL (from docs): https://docs.polymarket.com/quickstart/websocket/WSS-Quickstart
POLYMARKET_CLOB_WS_URL=wss://ws-subscriptions-clob.polymarket.com

# Data API base (from OpenAPI): https://docs.polymarket.com/api-reference/data-api-openapi.yaml
POLYMARKET_DATA_API_BASE_URL=https://data-api.polymarket.com

# Gamma API base (from OpenAPI): https://docs.polymarket.com/api-reference/gamma-openapi.json
POLYMARKET_GAMMA_API_BASE_URL=https://gamma-api.polymarket.com

# ============================================================================
# Polymarket 交易认证 (L2 Authentication)
# 文档: https://docs.polymarket.com/developers/CLOB/authentication
# ============================================================================

# 钱包地址和私钥 (用于派生 API 凭证)
POLYMARKET_TRADER_ADDRESS=
POLYMARKET_TRADER_PRIVATE_KEY=

# L2 API 凭证 (从私钥派生，或通过 /auth/derive-api-key 端点获取)
# 派生方法: GET {clob-endpoint}/auth/derive-api-key
# 或使用 py-clob-client: client.create_or_derive_api_creds()
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_PASSPHRASE=

# 代理钱包配置
# signature_type: 0=标准EOA, 1=Poly代理, 2=Gnosis Safe
POLYMARKET_SIGNATURE_TYPE=0
POLYMARKET_FUNDER_ADDRESS=

# 代理钱包地址 (可选，如果设置则直接使用此地址查询余额)
# 在 Polymarket.com 钱包页面可以找到您的代理钱包地址
POLYMARKET_PROXY_ADDRESS=

